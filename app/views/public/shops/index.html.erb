<dev class="container">
  <div class="row">
    <div class="col-md-4">

      <table class="table table-bordered genre-table" width="60">
        <thead>
          <tr>
            <th>エリアから探す</th>
          </tr>
        </thead>
        <tbody>
        <% Area.all.each do |area| %>
          <tr>
            <td>
              <%= link_to area.name, search_path('search[value]': area.id, 'search[how]': "match",'search[target]': "area") %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <table class="table table-bordered genre-table">
        <thead>
          <tr>
            <th>雰囲気から探す</th>
          </tr>
        </thead>
        <tbody>
        <% Atmosphere.all.each do |atmosphere| %>
          <tr>
            <td>
              <%= link_to atmosphere.atmosphere, search_path('search[value]': atmosphere.id, 'search[how]': "match",'search[target]': "atmosphere") %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-8">
      <h4>店舗一覧</h4>
      <% @shops.each do |shop| %>
      <% @shop = shop %>
      <div class="container">
        <div class="row">
        <div class="col-6">
          <%= link_to shop_path(shop), class: "btn-link" do %>
            <div class="img-thumbnail">
              <%= attachment_image_tag shop, :image, format: 'jpeg', size: "320x220" %>
            </div>
                    <%# カラムはimage_idだがrefileの仕様でidは書かない %>
          <% end %>
        </div>
        <div class="col-6">
          <div id="favorite_shop_<%= shop.id %>">
            <%= render 'favorite', shop: shop %>
          </div>
          <div id="candidate_shop_<%= shop.id %>">
            <%= render 'candidate', shop: shop %>
          </div>

          <div class="shop-detail">
            <h5><span>店名  <%= shop.name %></span></h5>
            <div class="average-review-rating" data-score=<%#= @comment.average_rate %>></div><%# average_ = 平均を計算 %>
              <script>
                // $('.average-review-rating').raty({
                //   readOnly: true,
                //   starOn: "<%= asset_path('star-on.png') %>",
                //   starOff: "<%= asset_path('star-off.png') %>",
                //   starHalf: "<%= asset_path('star-half.png') %>",
                //   score: function() {
                //     return $(this).attr('data-score')
                //   }
                // });
              </script>
            営業日  <%= shop.business_day %><br>
            販売形式
            <%= shop.eat_in == "1" ? "イートイン  " : "" %><%= shop.take_out == "1" ? "テイクアウト" : "" %>
            予算  <%= shop.budget %><br>
            エリア  <%= shop.area.name %><br>
            店舗ジャンル  <%= shop.atmosphere.atmosphere %><br>
          </div>
        </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>