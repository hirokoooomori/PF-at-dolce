<div class="container">
  <div class="row">
    <div class="col">
    
   
		      <div class="shop-image">
            <%= link_to shop_path(@shop), class: "btn-link" do %>
              <%= attachment_image_tag @shop, :image, format: 'jpeg', size: "320x220" %>
              <%# カラムはimage_idだがrefileの仕様でidは書かない %>
            <% end %>
          </div>
        
        

          <h5><span><%= @shop.name %></span></h5>
          <div class="shop-item">
          <% if @shop.favorited_by?(current_customer) %>
            <p class="fav-inline" style="color: #5A3E26">
              <% favorite = @shop.favorites.find_by(customer_id: current_customer.id) %>
              <%= link_to shop_favorite_path(@shop.id, favorite.id), method: :delete do %>
                <i class="fas fa-heart" style="color: #5A3E26;"></i><font color="#5A3E26"><%= @shop.favorites.count %></font>
              <% end %>
            </p>
          <% else %>
            <p class="fav-inline">
              <%= link_to shop_favorites_path(@shop), method: :post do %>
                <i class="far fa-heart" style="color: #5A3E26;"></i><%= @shop.favorites.count %>
              <% end %>
            </p>
          <% end %>

          <% if @shop.candidated_by?(current_customer) %>
            <p class="fav-inline">
              <% candidate = @shop.candidates.find_by(customer_id: current_customer.id) %>
              <%= link_to shop_candidate_path(@shop.id, candidate.id), method: :delete do %>
                <i class="fas fa-bookmark" style="color: #5A3E26;"></i><%= @shop.candidates.count %>
              <% end %>
            </p>
          <% else %>
            <p class="fav-inline">
              <%= link_to shop_candidates_path(@shop), method: :post do %>
                <i class="far fa-bookmark" style="color: #5A3E26;"></i><%= @shop.candidates.count %>
              <% end %>
            </p>
          <% end %>
          <div>
            <a>営業日  <%= @shop.business_day %> / </a>
            <a>予算  <%= @shop.budget %> / </a>
            <a>エリア  <%= @shop.area.name %> / </a>
            <a>店舗ジャンル  <%= @shop.atmosphere.atmosphere %></a>
          </div>
        </div>
        </div>
  </div>


<div class="col">
  <h3>コメント</h3>
  <table>
    <% @shop.comments.each do |comment| %>
    <%# comment.shop.each do |shop| %>
    <tr>

      <td><%#= link_to customer_path(@customer) do %>
      <%#= attachment_image_tag @customer, :image, :fill, 30, 30, fallback: "no_image.jpg" %><br><%= comment.customer.name %>
      <%# end %>
      </td>
      <td><%= attachment_image_tag(comment, :image, size: "350x230") %></td>
      <td><%= comment.comment %></td>
      <td><%# if comment.customer == current_user %><%= link_to "削除", shop_comment_path(shop_id: comment.shop_id, id: @shop.id), method: :delete %><%# end %></td>
    </tr>
    <%# end %>
    <% end %>
  </table>
</div>
<div class="col">
<div class="table">
  <%= form_with model:[@shop, @comment], local: true do |f| %>
    <tr>
      <td>店舗画</td>
      <td><%= f.file_field :image %></td>
    </tr>
    <tr>
      <td>コメント</td>
      <td><%= f.text_area :comment %></td>
    </tr>
    <%= f.submit "送信" %>
  <% end %>
</div>
</div>
<%= link_to "店舗一覧へ戻る", shops_path, class: "btn btn-outline-secondary" %>
</div>
</div>