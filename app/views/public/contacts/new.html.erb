<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10 mt-5 new-form">
      <h3><strong><font color="#4d4d4d">お問い合わせフォーム</font></strong></h3>
      <div class="m-5">
        <%= form_with model: @contact, url: confirm_contacts_path, local: true do |f| %>
          <div class="form-group my-3">
            <%= f.label :name, 'お名前*' %>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group my-3">
            <%= f.label :message, 'お問い合わせ内容*' %>
            <%= f.text_area :message, size: '10x10', class: 'form-control' %>
          </div>
          <div>
            <%= f.submit '入力内容確認', class: 'button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>