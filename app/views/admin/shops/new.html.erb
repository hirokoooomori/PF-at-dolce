<div><h3>店舗新規登録</h3></div>

<%= form_with model: @shop, url: admin_shops_path, local: true do |f| %>
  <table class="table">

    <tr>
      <td>店舗名</td>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <td>店舗画像</td>
      <td><%= f.file_field :image_id, id: :image_id %></td>
    </tr>

    <tr>
      <td>営業日</td>
      <td><%= f.text_field :business_day %></td>
    </tr>

    <tr>
      <td>販売形式</td>
      <td>
        <a><input type="checkbox" name="eat_in" value="1">イートイン</a>
        <a><input type="checkbox" name="take_out" value="1">テイクアウト</a>
      </td>
    </tr>

    <tr>
      <td>予算</td>
      <td><%= f.text_field :budget %>円</td>
    </tr>

    <tr>
      <td>エリア</td>
      <th><%#= f.collection_select :genre_id, Genre.area.all, :id, :name,{prompt: "選択してください"} %></th>
    </tr>      <%# Genre.allの中から選択したgenre_id(ジャンル)に:idでIDを与える %>

    <tr>
      <td>雰囲気ジャンル</td>
      <th><%#= f.collection_select :genre_id, Genre.atmospheres.all, :id, :name,{prompt: "選択してください"} %></th>
    </tr>      <%# Genre.allの中から選択したgenre_id(ジャンル)に:idでIDを与える %>

  </table>

    <div class="text-center">
      <br><%= f.submit "新規登録", class: "btn btn-sm btn-block btn-info" %>
    </div>

  <% end %>
  </div>
</div>