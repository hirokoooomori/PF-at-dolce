<%# if admin_signed_in? %>
<div class="col-md-8">
  <h3><span>会員一覧</span></h3>
  <table class="table">
   <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>ユーザー名</th>
      <th>会員ステータス</th>
    </tr>
  </thead>
   <% @customers.each do |customer| %>
  <tbody>
   <tr>
    <td><%= customer.id %></td>
    <td><%= link_to customer.name, admin_customer_path(customer) %></td>
    <td><%= customer.email %></td>
    <th><% if customer.is_deleted %>
          <span style="color:gray">退会</span>
        <% else %>
          <span style="color:green">有効</span>
        <% end %></th>
   </tr>
  </tbody>
  <% end %>
  </table>
  <%#= paginate %>
</div>

<%# end %>