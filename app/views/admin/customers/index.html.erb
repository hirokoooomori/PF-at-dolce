<%# if admin_signed_in? %>
<div class="container">
 <div class="row">
  <div class="col-md-8 mx-auto mt-5">
    <h3><strong>会員一覧</strong></h3>
    <table class="table mt-4">
     <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>ユーザー名</th>
        <th>会員ステータス</th>
      </tr>
    </thead>
     <% @customers.each do |customer| %>
    <tbody>
     <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.name, admin_customer_path(customer) %></td>
      <td><%= customer.email %></td>
      <th><% if customer.is_deleted %>
       <span style="color:gray">退会</span>
     <% else %>
       <span style="color:green">有効</span>
     <% end %></th>
     </tr>
    </tbody>
    <% end %>
   </table>
  </div>
 </div>
</div>
<% else %>
  管理者専用ページです
<% end %>