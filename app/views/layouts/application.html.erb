<!DOCTYPE html>
<html>
  <head>
    <title>AtDolce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

 <header class="fixed-top">
    <nav class="navbar navbar-expand-md navbar-light" >
    <% if customer_signed_in? %>
    <div class="">
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "トップ", root_path, class: 'link'%></li>
        <li class="nav-item"><%= link_to "マイページ", customer_path(current_customer), class: 'link'%></li>
        <li class="nav-item"><%= link_to "店舗一覧", shops_path, class: 'link'%></li>
        <li class="nav-item"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'link' %></li>
      </ul>
    </div>
    <% elsif admin_signed_in? %>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><%= link_to "トップ", admin_homes_top_path, class: 'link'%></li>
        <li class="nav-item"><%= link_to "会員一覧", admin_customers_path, class: 'link'%></li>
        <li class="nav-item"><%= link_to "店舗管理", admin_shops_path, class: 'link' %></li>
        <li class="nav-item"><%= link_to "ジャンル管理", admin_genres_path, class: 'link' %></li>
        <li class="nav-item"><%= link_to "ログアウト", admins_sign_out_path, method: :delete, class: 'link'%></li>
      </ul>
     </div>
     <% else %>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item"><%= link_to " 新規登録", new_customer_registration_path, class: 'link'%></li>
          <li class="nav-item"><%= link_to " ログイン", new_customer_session_path, class: 'link' %></li>
        </ul>
      </div>
     <% end %>
     </nav>
  </header>

  <main>
    <% if flash[:notice] %>
      <div class="alert alert-primary text-center" role="alert"><strong><%= notice %></strong></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger text-center" role="alert"><strong><%= alert %></strong></div>
      <% end %>
    <%= yield %>
  </main>


</html>
